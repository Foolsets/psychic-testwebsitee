<script>
// Terminal typing
const lines = [
  '> initializing skate_mode...',
  '> loading neon shaders... [OK]',
  '> system ready. welcome!'
];
let lineIdx = 0;
let charIdx = 0;
const term = document.getElementById('terminal-text');

function typeLine() {
  if (lineIdx < lines.length) {
    if (charIdx < lines[lineIdx].length) {
      term.innerHTML += lines[lineIdx][charIdx];
      charIdx++;
      setTimeout(typeLine, 30);
    } else {
      term.innerHTML += '<br>';
      lineIdx++;
      charIdx = 0;
      setTimeout(typeLine, 300);
    }
  }
}
setTimeout(typeLine, 500);
