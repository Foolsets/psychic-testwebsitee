<script>
// Terminal typing
const text = `> initializing...
> loading skate_mode...
> ready.`;
let i = 0;
const term = document.getElementById('terminal-text');
function type() {
  if (i < text.length) {
    term.innerHTML += text.charAt(i) === '\n' ? '<br>' : text.charAt(i);
    i++;
    setTimeout(type, 50);
  }
}
setTimeout(type, 500);

// Skater animation frames
const skaterFrames = [
  ' O\n/|\\\n/ >',
  ' O\n/|\\\n< \\',
  ' O\n/|\\\n/ \\',
  ' O\n |\\\n/ \\',
  ' O\n/|\n/ \\',
];
let frame = 0;
setInterval(() => {
  document.getElementById('skater').innerText = skaterFrames[frame];
  frame = (frame + 1) % skaterFrames.length;
}, 200);
</script>
